<article class="module width_full">
  <header><h3><%= @issue.title %></h3></header>
  <div class="module_content"><%=raw parse_markdown(@issue.content) %></div>
</article>

<article class="module width_full">
  <header><h3><%= t('issue.discussions') %></h3></header>
  <div class="module_content">
    <table class="tablesorter" cellspacing="0">
      <thead>
        <tr>
          <th><%= t(:creator) %></th>
          <th><%= t(:content) %></th>
          <th><%= t(:created_at) %></th>
          <th><%= t(:updated_at) %></th>
        </tr>
      </thead>
      <tbody>
        <% @issue.comments.each do |c| %>
          <tr>
            <td><%= link_to c.user.name, c.user %></td>
            <td><%= c.content %></td>
            <td><%= c.created_at %></td>
            <td><%= c.updated_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</article>
